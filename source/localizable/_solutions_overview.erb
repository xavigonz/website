<section class="solutions">
  <div class="row">
    <div class="headline">
      <h2><%= t("home.solutions.headline") %></h2>
    </div>
  </div>

  <div class="row">
    <div class="solution">
      <div class="solution-icon">
        <%= locale_link_to image_tag("icons/leren-blue.png", alt: t("home.solutions.learn.title")), "/capp-lms.html" %>
      </div>
      <h3><%= locale_link_to t("home.solutions.learn.title"), "/capp.html" %></h3>
      <p><%= t("home.solutions.learn.text_html", link: locale_link_to("CAPP", "/capp-lms.html")) %></p>
      <ul class="keywords">
         <% t("home.solutions.learn.keywords").each do |keyword| %>
          <li><%= keyword %></li>
        <% end %>
      </ul>
      <%= locale_link_to t("actions.read_more"), "/capp-lms.html", class: "button blue" %>
    </div>

    <div class="solution">
      <div class="solution-icon">
        <%= locale_link_to image_tag("icons/borging-blue.png", alt: t("home.solutions.quality.title")), "/kwaliteitspaspoort.html" %>
      </div>
