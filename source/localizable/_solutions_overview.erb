      <p><%= t("home.solutions.quality.text_html") %></p>
      <ul class="keywords">
        <% t("home.solutions.quality.keywords").each do |keyword| %>
          <li><%= keyword %></li>
        <% end %>
      </ul>
      <%= locale_link_to t("actions.read_more"), "/kwaliteitspaspoort.html", class: "button blue" %>
    </div>

    <div class="solution">
      <div class="solution-icon">
        <%= locale_link_to image_tag("icons/informeel-green.png", alt: t("home.solutions.informal.title")), "/learningspaces.html" %>
      </div>
      <h3><%= locale_link_to t("home.solutions.informal.title"), "/learningspaces.html" %></h3>
      <p><%= t("home.solutions.informal.text_html", link: locale_link_to("LearningSpaces", "/learningspaces.html")) %></p>
      <ul class="keywords">
         <% t("home.solutions.informal.keywords").each do |keyword| %>
          <li><%= keyword %></li>
        <% end %>
      </ul>
      <%= locale_link_to t("actions.read_more"), "/learningspaces.html", class: "button green" %>
